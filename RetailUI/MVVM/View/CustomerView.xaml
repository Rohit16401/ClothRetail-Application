<UserControl x:Class="RetailUI.MVVM.View.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailUI.MVVM.View" xmlns:viewmodel="clr-namespace:RetailUI.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:CustomerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="Beige" Padding="10">
            <TextBlock Text="CUSTOMER DETAILS" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="Blue" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- The Form Section -->
        <Grid Grid.Row="2" Background="White" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Row 1: Name and Phone No -->
            <Label Grid.Row="0" Grid.Column="0" Content="Name:" Foreground="Blue" FontWeight="Bold" Margin="10,10,10,10" FontSize="16"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="10,10,10,10" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
            <Label Grid.Row="0" Grid.Column="2" Content="Phone No:" Foreground="Blue" FontWeight="Bold" Margin="10,10,10,10" FontSize="16"/>
            <TextBox Grid.Row="0" Grid.Column="3" Margin="10,10,10,10" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>

            <!-- Row 2: City and Type -->
            <Label Grid.Row="1" Grid.Column="0" Content="City:" Foreground="Blue" FontWeight="Bold" Margin="10,10,10,10" FontSize="16"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
            <Label Grid.Row="1" Grid.Column="2" Content="Type:" Foreground="Blue" FontWeight="Bold" Margin="10,10,10,10" FontSize="16"/>
           
            <ComboBox Grid.Row="1" Grid.Column="3"  ItemsSource="{Binding CustomerType}"  SelectedItem="{Binding SelectedCustomerType, Mode=TwoWay}" Margin="10,11" />
            <!-- Row 3: Additional fields (if needed) -->
            <!-- Additional fields can be added here, following the same pattern -->

            <!-- Submit Button (spanning all columns) -->
            <Button Grid.Row="4" Grid.Column="3" Content="Submit" Width="100" Height="40" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,10,10,10"
                    Background="Blue" Foreground="White" FontWeight="Bold" FontSize="16" 
                     Visibility="{Binding IsAddButtonVisible, Converter={StaticResource BoolToVisConverter}}"  Command="{Binding SubmitCommand}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="Update" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Background="Blue" Foreground="White" FontWeight="Bold" FontSize="16"
                   Visibility="{Binding IsUpdateButtonVisible, Converter={StaticResource BoolToVisConverter}}"
                  Command="{Binding UpdateCommand}" Height="40" Width="100"/>
        </Grid>
        <Grid Grid.Row="5" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="34*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="361*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="ItemsDataGrid"   
            ItemsSource="{Binding Customers}" 
            SelectedItem="{Binding SelectedCustomer}"
            AutoGenerateColumns="False" 
            Margin="10,10,10,10" 
            CanUserAddRows="False" 
            MaxHeight="300"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name }" Width="*"/>
                    <DataGridTextColumn Header="Phone No" Binding="{Binding Phone_No}" Width="*"/>
                    <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Popup Name="NotificationPopup" Placement="Center" IsOpen="{Binding IsPopupOpen}">
            <Border Background="LightBlue" Padding="10" CornerRadius="5" Width="300" Height="100">
                <StackPanel>
                    <TextBlock Text="{Binding PopupMessage}" FontWeight="Bold" FontSize="20" />
                    <Button Content="Close" Command="{Binding ClosePopupCommand}" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
