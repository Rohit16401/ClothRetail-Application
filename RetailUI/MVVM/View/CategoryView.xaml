<UserControl x:Class="RetailUI.MVVM.View.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1500" d:DesignWidth="1000">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="White" Margin="20">
            <!-- Main Grid Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Background="Beige" Padding="15" CornerRadius="8" Margin="0,0,0,10">
                <TextBlock Text="CATEGORY DETAILS"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="DarkBlue"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Main Content Section -->
            <Grid Grid.Row="2" Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Category L0 -->
                <Border Grid.Row="0" Grid.Column="0" Background="White" Padding="15" CornerRadius="8" Margin="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Category L0" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CategoryL0:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Column="1" Margin="5" Text="{Binding CategoryL0, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <Button Content="Add Category L0" HorizontalAlignment="Center" Width="150" Margin="10"
                                Background="DarkBlue" Foreground="White" Command="{Binding AddCategoryL0Command}"/>
                    </StackPanel>
                </Border>

                <!-- Category L1 -->
                <Border Grid.Row="0" Grid.Column="1" Background="White" Padding="15" CornerRadius="8" Margin="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Category L1" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CatL0_Id:" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding CategoriesL0}" SelectedValue="{Binding SelectedCategoryL0Id, Mode=TwoWay}"
                                      DisplayMemberPath="Category_L0" SelectedValuePath="CatL0_Id" Margin="5"/>
                            <TextBlock Grid.Row="1" Text="CategoryL1:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding CategoryL1, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <Button Content="Add Category L1" HorizontalAlignment="Center" Width="150" Margin="10"
                                Background="DarkBlue" Foreground="White" Command="{Binding AddCategoryL1Command}"/>
                    </StackPanel>
                </Border>

                <!-- Category L2 -->
                <Border Grid.Row="1" Grid.Column="0" Background="White" Padding="15" CornerRadius="8" Margin="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Category L2" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CatL1_Id:" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding CategoriesL1}" SelectedValue="{Binding SelectedCategoryL1Id, Mode=TwoWay}"
                                      DisplayMemberPath="Category_L1" SelectedValuePath="CatL1_Id" Margin="5"/>
                            <TextBlock Grid.Row="1" Text="CategoryL2:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding CategoryL2, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <Button Content="Add Category L2" HorizontalAlignment="Center" Width="150" Margin="10"
                                Background="DarkBlue" Foreground="White" Command="{Binding AddCategoryL2Command}"/>
                    </StackPanel>
                </Border>

                <!-- Category L3 -->
                <Border Grid.Row="1" Grid.Column="1" Background="White" Padding="15" CornerRadius="8" Margin="5" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Category L3" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CatL2_Id:" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding CategoriesL2}" SelectedValue="{Binding SelectedCategoryL2Id, Mode=TwoWay}"
                                      DisplayMemberPath="Category_L2" SelectedValuePath="CatL2_Id" Margin="5"/>
                            <TextBlock Grid.Row="1" Text="CategoryL3:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding CategoryL3, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <Button Content="Add Category L3" HorizontalAlignment="Center" Width="150" Margin="10"
                                Background="DarkBlue" Foreground="White" Command="{Binding AddCategoryL3Command}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer Section -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" ItemsSource="{Binding CategoryType}" SelectedItem="{Binding SelectedCategoryType, Mode=TwoWay}"
                          Height="30" Margin="5" Width="150"/>
                <DataGrid Grid.Column="1" ItemsSource="{Binding Category}" AutoGenerateColumns="True" Margin="5" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
